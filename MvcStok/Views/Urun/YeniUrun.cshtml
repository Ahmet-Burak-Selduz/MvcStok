@model MvcStok.Models.Entity.Tbl_Urunler
@{
    ViewBag.Title = "YeniUrun";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<form class="form-group" method="post">
    <div>
        <label>Ürün Adı</label>
        <input type="text" class="form-control" name="UrunAd" required="" maxlength="50"/>
    </div>
    <div>
        <label>Markası</label>
        <input type="text" class="form-control" name="Marka" required="" maxlength="30"/>
    </div>
    <div>
        <label>Kategori Seçin</label>
        @Html.DropDownListFor(m => m.Tbl_Kategoriler.KategoriId, (List<SelectListItem>)ViewBag.dgr, new { @class = "form-control" })
    </div>
    <div>
        <label>Fiyatı</label>
        <input type="text" class="form-control" name="Fiyat" required=""/>
    </div>
    <div>
        <label>Stok Adet</label>
        <input type="text" class="form-control" name="Stok" required=""/>
    </div>
    <div style="margin-top:20px">
        <button class="btn btn-info">Ürün Ekle</button>
    </div>
</form>